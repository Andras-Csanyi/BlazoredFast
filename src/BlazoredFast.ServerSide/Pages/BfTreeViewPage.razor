                <fast-tree-item slot="item">first level - second level second - third</fast-tree-item>
            </fast-tree-item>
        </fast-tree-item>
        <fast-tree-item>first level fourth</fast-tree-item>
        <fast-tree-item>first level fifth</fast-tree-item>
    </fast-tree-view>

